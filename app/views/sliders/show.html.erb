<p style="color: green"><%= notice %></p>

<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="product-card" style="max-width: 500px; width: 100%;">
      <% if @slider.image.attached? %>
        <div class="product-card-img-wrapper">
          <%= image_tag @slider.image.variant(resize_to_limit: [500, 300]), class: 'product-card-img', alt: @slider.title %>
        </div>
      <% end %>
      <div class="p-4">
        <h2 class="gallery-heading-gradient mb-3" style="font-size: 2rem;"> <%= @slider.title %> </h2>
        <% if @slider.description.present? %>
          <p style="color: #333; font-size: 1.1rem;"> <%= @slider.description %> </p>
        <% end %>
        <div class="d-flex justify-content-center gap-3 mt-4">
          <% if defined?(user_signed_in?) && user_signed_in? %>
            <%= link_to 'Edit', edit_slider_path(@slider), class: 'btn btn-primary px-5 py-2' %>
            <%= button_to 'Delete', @slider, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger px-5 py-2' %>
          <% end %>
          <%= link_to 'Back', sliders_path, class: 'btn btn-outline-secondary px-5 py-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
