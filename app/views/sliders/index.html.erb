<p style="color: green"><%= notice %></p>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="gallery-heading-gradient">Sliders</h1>
    <% if user_signed_in? %>
      <%= link_to 'New Slider', new_slider_path, class: 'btn btn-primary px-5 py-2' %>
    <% end %>
  </div>

  <div class="product-card-grid">
    <% @sliders.each do |slider| %>
      <div class="product-card">
        <div class="product-card-img-wrapper">
          <% if slider.image.exists? %>
            <%= image_tag slider.image.url(:thumb), class: 'product-card-img', alt: slider.title %>
          <% else %>
            <div class="product-card-img product-card-img-placeholder"></div>
          <% end %>
        </div>
        <div class="product-card-footer">
          <span class="product-card-title"><%= slider.title %></span>
          <%= link_to '>', slider_path(slider), class: 'product-card-btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .gallery-heading-gradient {
    font-weight: 800;
    letter-spacing: 1px;
    font-size: 2.2rem;
    background: linear-gradient(90deg, #1e3c72 0%, #6a11cb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }
  .product-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  .product-card {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(30,60,114,0.07);
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .product-card:hover {
    box-shadow: 0 8px 32px rgba(106,17,203,0.13);
    transform: translateY(-6px) scale(1.03);
  }
  .product-card-img-wrapper {
    width: 100%;
    height: 220px;
    background: #f6f8fa;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .product-card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1.5rem 1.5rem 0 0;
  }
  .product-card-img-placeholder {
    width: 100%;
    height: 100%;
    background: #e0e0e0;
    border-radius: 1.5rem 1.5rem 0 0;
  }
  .product-card-footer {
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #f0f0f0;
  }
  .product-card-title {
    font-weight: 700;
    color: #1e3c72;
    font-size: 1.15rem;
  }
  .product-card-btn {
    background: linear-gradient(90deg, #1e3c72 0%, #6a11cb 100%);
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    text-decoration: none;
    transition: background 0.2s, color 0.2s;
  }
  .product-card-btn:hover {
    background: linear-gradient(90deg, #6a11cb 0%, #1e3c72 100%);
    color: #ffd600;
  }
</style>
