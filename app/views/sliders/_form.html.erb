<%= form_with(model: slider, local: true) do |form| %>
  <h1 class="mb-4"><%= slider.persisted? ? 'Edit Slider' : 'New Slider' %></h1>
  <% if slider.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(slider.errors.count, "error") %> prohibited this slider from being saved:</h2>
      <ul>
        <% slider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: 4, placeholder: 'Enter a description for your slider...' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control', accept: 'image/*' %>
    <% if slider.image.attached? %>
      <div class="mt-2">
        <%= image_tag slider.image.variant(resize_to_limit: [300, 200]), class: 'img-thumbnail', style: 'max-width: 200px;' %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= form.submit slider.persisted? ? 'Update Slider' : 'Create Slider', class: 'btn btn-primary px-5 py-2' %>
    <%= link_to 'Cancel', sliders_path, class: 'btn btn-outline-secondary px-5 py-2 ms-2' %>
  </div>
<% end %>
