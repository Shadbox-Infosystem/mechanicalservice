<nav class="custom-navbar">
  <div class="navbar-content">
    <!-- Logo / Brand -->
    <div class="navbar-left">
      <%= link_to root_path, class: "navbar-brand" do %>
        <span class="brand-italic">GC</span> <span class="brand-bold">PRECISION</span>
      <% end %>
    </div>

    <!-- Hamburger toggle (visible on mobile) -->
    <button class="navbar-toggler" type="button" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Links -->
    <div class="navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link #{current_page?(root_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "About Us", about_sections_path, class: "nav-link #{current_page?(about_sections_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Our Products", products_path, class: "nav-link #{current_page?(products_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Our Gallery", galleries_path, class: "nav-link #{current_page?(galleries_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact Us", contact_path, class: "nav-link #{current_page?(contact_path) ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Category", categories_path, class: "nav-link #{current_page?(categories_path) ? 'active' : ''}" %>
        </li>
      </ul>

      <% if user_signed_in? %>
        <div class="nav-auth">
          <%= button_to "Logout", destroy_user_session_path,
                        method: :delete,
                        class: "nav-auth-btn" %>
        </div>
      <% else %>
        <div class="nav-auth">
          <%= link_to "Login", new_user_session_path, class: "nav-auth-btn" %>
        </div>
      <% end %>
    </div>
  </div>
