<div class="gallery-show-container">
  <div class="gallery-header">
    <h1><%= @gallery.title %></h1>
    
    <% if defined?(user_signed_in?) && user_signed_in? %>
      <div class="gallery-actions">
        <%= link_to edit_gallery_path(@gallery), class: "btn-edit" do %>
          <i class="fas fa-edit"></i> Edit
        <% end %>
        <%= button_to gallery_path(@gallery), 
                    method: :delete, 
                    class: "btn-delete",
                    data: { confirm: "Are you sure you want to delete this gallery?" } do %>
          <i class="fas fa-trash"></i> Delete
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="gallery-images-grid">
    <% if @gallery.images.attached? %>
      <% @gallery.images.each do |image| %>
        <div class="gallery-image">
          <%= image_tag image.variant(resize_to_limit: [800, 600]), 
                      alt: @gallery.title,
                      loading: "lazy" %>
        </div>
      <% end %>
    <% else %>
      <div class="no-images">
        <i class="fas fa-images"></i>
        <p>No images in this gallery</p>
      </div>
    <% end %>
  </div>

  <div class="gallery-navigation">
    <%= link_to galleries_path, class: "btn-back" do %>
      <i class="fas fa-arrow-left"></i> Back to Galleries
    <% end %>
  </div>
</div>

<style>
  .gallery-show-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .gallery-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .gallery-header h1 {
    color: #2c3e50;
    margin: 0;
    font-size: 2rem;
  }

  .gallery-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-edit,
  .btn-delete,
  .btn-back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .btn-edit {
    background-color: #3498db;
    color: white;
  }

  .btn-edit:hover {
    background-color: #2980b9;
  }

  .btn-delete {
    background-color: #e74c3c;
    color: white;
    border: none;
    cursor: pointer;
  }

  .btn-delete:hover {
    background-color: #c0392b;
  }

  .gallery-images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .gallery-image {
    position: relative;
    aspect-ratio: 4/3;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .gallery-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-image:hover img {
    transform: scale(1.05);
  }

  .no-images {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    background: #f8f9fa;
    border-radius: 10px;
    color: #6c757d;
  }

  .no-images i {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .gallery-navigation {
    text-align: center;
    margin-top: 2rem;
  }

  .btn-back {
    background-color: #95a5a6;
    color: white;
  }

  .btn-back:hover {
    background-color: #7f8c8d;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .gallery-show-container {
      padding: 1rem;
    }

    .gallery-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .gallery-header h1 {
      font-size: 1.75rem;
    }

    .gallery-images-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .gallery-images-grid {
      grid-template-columns: 1fr;
    }

    .gallery-actions {
      flex-direction: column;
      width: 100%;
    }

    .btn-edit,
    .btn-delete {
      width: 100%;
      justify-content: center;
    }
  }
</style>
