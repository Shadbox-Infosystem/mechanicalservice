<%# app/views/products/show.html.erb %>
<div class="container mt-5">
  <h1 class="text-center mb-5 gallery-heading-gradient" style="font-size: 2.5rem; font-weight: 800; letter-spacing: 1px;"> <%= @product.name %> </h1>
  <div class="row justify-content-center align-items-start">
    <div class="col-md-5 mb-4 mb-md-0 d-flex justify-content-center">
      <% if @product.image.attached? %>
        <%= image_tag @product.image.variant(resize_to_limit: [500, 350]), class: 'img-fluid rounded shadow', alt: @product.name, style: 'max-height:350px; object-fit:contain;' %>
      <% else %>
        <div class="d-flex align-items-center justify-content-center bg-light rounded shadow" style="width:100%; min-height: 250px; max-width: 500px;">
          <span class="text-muted">No Image Available</span>
        </div>
      <% end %>
    </div>
    <div class="col-md-7">
      <div class="bg-white rounded-4 shadow p-4 h-100">
        <div class="mb-3" style="color: #333; font-size: 1.1rem;">
          <div class="mb-3">
            <div class="mt-2"><%= @product.description %></div>
          </div>
        </div>
        <div class="d-flex gap-3 mt-4">
          <% if defined?(user_signed_in?) && user_signed_in? %>
            <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary px-5 py-2' %>
          <% end %>
          <%= link_to 'Back', products_path, class: 'btn btn-outline-secondary px-5 py-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  @media (max-width: 768px) {
    .gallery-heading-gradient {
      font-size: 2rem !important;
    }
  }
</style> 