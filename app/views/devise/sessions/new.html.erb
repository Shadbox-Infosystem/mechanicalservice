<%# app/views/devise/sessions/new.html.erb %>

<!--
  We’re wrapping everything in a “login-container” so we can center the card
  and give the page a dark background. 
-->
<div class="login-container">
  <!-- Centered card -->
  <div class="login-card">
    <!-- (Optional) Logo at the top -->
    <div class="login-logo">
      <!-- Replace with your own logo path or text -->
      <h2>GC PRECISION</h2>
    </div>

    <!-- Card Title -->
    <h2 class="login-title">Sign in to your account</h2>

    <!-- Devise form_for(resource) … -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "name@company.com",
              class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password,
              autocomplete: "current-password",
              placeholder: "••••••••",
              class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group remember-me-group">
          <label class="remember-me-label">
            <%= f.check_box :remember_me, class: "remember-me-checkbox" %>
            <span>Remember me</span>
          </label>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot-password-link" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Sign in", class: "form-button" %>
      </div>
    <% end %>

    <div class="signup-link-container">
      <p class="signup-text">
        Don’t have an account yet?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "signup-link" %>
      </p>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
